<% provide(:title, t(".heading")) %>
<% if logged_in? %>
  <div class="row">
    <aside classs="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      <section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t ".micropost_feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t(".welcome") %></h1>
    <h2>
      <%= t(".intro") %>
      <%= link_to t(".rails_href"), Settings.url.rails_home_url %>
      <%= t(".sample_app") %>
    </h2>
    <%= link_to t(".signup"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
  <%= link_to image_tag("rails.svg", alt: t(".logo_alt"), width: "200px"),
  Settings.url.rails_home_url %>
<% end %>
